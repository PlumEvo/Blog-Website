<div class="author">
    <h1 class="author_heading">Hi, I am PlumEvo.</h1>
    <p class="author_body">Web Developer</p>
</div>

<img src="/img/hero-image.jpg" alt="person looking out through window" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    
    <ul class="article-ul">

    <% data.forEach(post => { %>

        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        
    <% }) %>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

    </ul>
</section>
